{
    "version": "2.0.0",
    "testFramework": {
        "name": "Augment VIP Cleaner Test Suite",
        "version": "2.0.0",
        "author": "Augment VIP Project",
        "description": "Enterprise-grade testing framework for comprehensive validation"
    },
    "testConfiguration": {
        "defaultLogLevel": "Normal",
        "outputDirectory": "./test-results",
        "tempDirectory": "./temp-test-data",
        "maxTestDuration": "00:30:00",
        "parallelExecution": false,
        "generateReports": true,
        "autoCleanup": true
    },
    "testSuites": {
        "unit": {
            "enabled": true,
            "timeout": "00:10:00",
            "modules": [
                "Logger",
                "CommonUtils",
                "SystemDetection",
                "DependencyManager",
                "VSCodeDiscovery",
                "BackupManager",
                "DatabaseCleaner",
                "TelemetryModifier",
                "UnifiedServices"
            ],
            "testCategories": [
                "ModuleImport",
                "FunctionExecution",
                "ParameterValidation",
                "ErrorHandling",
                "ReturnValues"
            ]
        },
        "integration": {
            "enabled": true,
            "timeout": "00:15:00",
            "testScenarios": [
                "ModuleInteractions",
                "ConfigurationIntegration",
                "LoggingIntegration",
                "BackupWorkflow",
                "DatabaseCleaningWorkflow",
                "TelemetryModificationWorkflow",
                "DependencyManagementWorkflow",
                "ErrorRecoveryWorkflow",
                "CrossPlatformCompatibility"
            ],
            "requiresTestData": true,
            "createBackups": true
        },
        "security": {
            "enabled": true,
            "timeout": "00:20:00",
            "autoFix": false,
            "severityLevels": ["Critical", "High", "Medium", "Low"],
            "testCategories": [
                "SQLInjection",
                "CommandInjection",
                "PathTraversal",
                "InputValidation",
                "CryptographicSecurity",
                "FilePermissions",
                "ErrorHandling",
                "ConfigurationSecurity",
                "DependencySecurity",
                "LoggingSecurity"
            ],
            "complianceStandards": [
                "OWASP",
                "CWE",
                "NIST"
            ]
        },
        "performance": {
            "enabled": true,
            "timeout": "00:25:00",
            "thresholds": {
                "moduleImportTime": "00:00:05",
                "uuidGenerationTime": "00:00:00.100",
                "configurationLoadTime": "00:00:02",
                "databaseOperationTime": "00:00:10",
                "backupCreationTime": "00:00:30",
                "memoryUsageLimit": "100MB"
            },
            "benchmarks": {
                "uuidGenerationBulk": 100,
                "configurationLoadRepeated": 10,
                "concurrentOperations": 5
            }
        },
        "crossPlatform": {
            "enabled": true,
            "timeout": "00:15:00",
            "platforms": ["Windows", "Linux", "MacOS"],
            "pythonRequired": true,
            "testAreas": [
                "PythonEnvironment",
                "FeatureParity",
                "ConfigurationCompatibility",
                "DatabaseOperations",
                "IDGeneration",
                "PathHandling",
                "ErrorHandling",
                "Logging"
            ]
        }
    },
    "testData": {
        "databases": {
            "testRecordCount": 1000,
            "augmentRecordCount": 100,
            "patterns": [
                "augment.test.%",
                "telemetry.%",
                "context7.%"
            ]
        },
        "files": {
            "testFileSize": "1KB",
            "largeFileSize": "10MB",
            "testContent": "Test content for validation"
        },
        "configurations": {
            "validConfig": true,
            "invalidConfig": true,
            "emptyConfig": true
        }
    },
    "reporting": {
        "formats": ["JSON", "HTML", "XML"],
        "includeDetails": true,
        "includeMetrics": true,
        "includeSystemInfo": true,
        "generateSummary": true,
        "emailNotification": false,
        "webhookNotification": false
    },
    "security": {
        "enableSandbox": true,
        "restrictFileAccess": true,
        "allowNetworkAccess": false,
        "encryptSensitiveData": true,
        "auditTrail": true
    },
    "dependencies": {
        "required": {
            "powershell": "5.1+",
            "dotnet": "4.7.2+",
            "sqlite": "3.0+"
        },
        "optional": {
            "python": "3.8+",
            "git": "2.0+",
            "chocolatey": "latest"
        },
        "verification": {
            "checkVersions": true,
            "validateIntegrity": true,
            "reportMissing": true
        }
    },
    "environment": {
        "variables": {
            "AUGMENT_TEST_MODE": "true",
            "AUGMENT_LOG_LEVEL": "Debug",
            "AUGMENT_TEMP_DIR": "./temp"
        },
        "cleanup": {
            "removeTemporaryFiles": true,
            "resetEnvironmentVariables": true,
            "unloadModules": true
        }
    },
    "validation": {
        "strictMode": true,
        "validateInputs": true,
        "validateOutputs": true,
        "checkReturnCodes": true,
        "verifyFileIntegrity": true
    },
    "monitoring": {
        "trackMemoryUsage": true,
        "trackExecutionTime": true,
        "trackFileOperations": true,
        "trackNetworkCalls": false,
        "generateMetrics": true
    },
    "recovery": {
        "enableAutoRecovery": true,
        "maxRetryAttempts": 3,
        "retryDelay": "00:00:05",
        "rollbackOnFailure": true,
        "preserveTestData": false
    },
    "compliance": {
        "standards": [
            "ISO27001",
            "SOC2",
            "GDPR"
        ],
        "auditRequirements": {
            "logAllOperations": true,
            "encryptLogs": false,
            "retainLogs": "30 days"
        }
    }
}
