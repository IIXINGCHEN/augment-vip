{
    "version": "1.0.0",
    "environment": "production",
    "platform": {
        "autoDetect": true,
        "preferredImplementation": "auto",
        "windows": {
            "useNativeImplementation": true,
            "fallbackToPython": true
        },
        "linux": {
            "usePythonImplementation": true,
            "vscodePaths": [
                "~/.config/Code/User/",
                "~/.vscode/",
                "~/.config/Code - Insiders/User/"
            ]
        },
        "macos": {
            "usePythonImplementation": true,
            "vscodePaths": [
                "~/Library/Application Support/Code/User/",
                "~/Library/Application Support/Code - Insiders/User/"
            ]
        }
    },
    "backup": {
        "enabled": true,
        "retentionDays": 30,
        "maxBackupCount": 3,
        "directory": "./data/backups"
    },
    "logging": {
        "level": "Info",
        "enableConsole": true,
        "enableFile": true,
        "directory": "./logs",
        "enableSensitiveFiltering": true,
        "maxLogFileSize": "10MB",
        "maxLogFiles": 5
    },
    "security": {
        "requireAdminPrivileges": false,
        "allowContinueWithoutAdmin": true,
        "enableSQLInjectionProtection": true,
        "enableSecureFileHandling": true,
        "enableInputValidation": true,
        "enableSecureLogging": true,
        "enablePathValidation": true,
        "enableCommandValidation": true,
        "enableCryptographicSecurity": true,
        "enableBackupEncryption": false,
        "enableAuditTrail": true,
        "enableSensitiveDataFiltering": true,
        "enableDependencyVerification": true,
        "enableCommandInjectionProtection": true,
        "enablePathTraversalProtection": true,
        "secureRandomGeneration": true,
        "enforceParameterizedQueries": true,
        "backupFilePermissions": "OwnerOnly",
        "secureDeletePasses": 3,
        "maxPathLength": 260,
        "allowedFileExtensions": [
            ".db",
            ".sqlite",
            ".sqlite3",
            ".json",
            ".log"
        ],
        "blockedPatterns": [
            "../",
            "..\\\\",
            "<script",
            "javascript:",
            "vbscript:",
            ";&",
            "|&",
            "`",
            "$env:",
            "Invoke-Expression"
        ],
        "sensitivePatterns": [
            "pwd",
            "auth",
            "cred",
            "apikey",
            "secret",
            "deviceId",
            "sessionId"
        ],
        "trustedPackageManagers": [
            "chocolatey",
            "scoop",
            "winget"
        ]
    },
    "cleaning": {
        "patterns": {
            "augment": [
                "%augment%",
                "%Augment%",
                "%AUGMENT%",
                "%augment-code%",
                "%augmentcode%",
                "%context7%",
                "%Context7%",
                "%CONTEXT7%"
            ],
            "telemetry": [
                "%telemetry%",
                "%machineId%",
                "%deviceId%",
                "%sqmId%",
                "%uuid%",
                "%session%",
                "%lastSessionDate%",
                "%lastSyncDate%",
                "%lastSyncMachineId%",
                "%lastSyncDeviceId%",
                "%lastSyncSqmId%",
                "%lastSyncUuid%",
                "%lastSyncSession%",
                "%lastSyncLastSessionDate%",
                "%lastSyncLastSyncDate%"
            ],
            "extensions": [
                "%augment.%",
                "%context7.%",
                "%augment-vip%",
                "%augment_vip%"
            ],
            "custom": []
        },
        "enableDatabaseCleaning": true,
        "enableTelemetryModification": true,
        "checkVSCodeRunning": true
    },
    "telemetry": {
        "modifyIds": true,
        "idTypes": [
            "telemetry.machineId",
            "telemetry.devDeviceId",
            "telemetry.sqmId",
            "telemetry.sessionId",
            "telemetry.lastSessionDate",
            "telemetry.firstSessionDate",
            "telemetry.instanceId"
        ]
    },
    "discovery": {
        "includePortable": true,
        "searchPaths": [],
        "enableProductionMethod": true,
        "crossPlatformPaths": {
            "windows": [
                "%APPDATA%\\Code\\User\\",
                "%LOCALAPPDATA%\\Programs\\Microsoft VS Code\\"
            ],
            "linux": [
                "~/.config/Code/User/",
                "~/.vscode/"
            ],
            "macos": [
                "~/Library/Application Support/Code/User/"
            ]
        }
    },
    "modules": {
        "windows": {
            "path": "./scripts/windows/modules",
            "required": [
                "Logger",
                "SystemDetection",
                "VSCodeDiscovery",
                "BackupManager",
                "DatabaseCleaner",
                "TelemetryModifier"
            ]
        },
        "crossPlatform": {
            "path": "./scripts/cross-platform",
            "pythonPackage": "augment_vip"
        }
    },
    "features": {
        "autoCleanupBackups": true,
        "scatteredBackupCleanup": true,
        "backupIntegrityCheck": true,
        "crossPlatformSupport": true
    }
}